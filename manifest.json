{
  "manifest_version": 3,
  "name": "Google One Toolkit by Hafointosher - Hotline: 0859212468",
  "version": "1.5",
  "description": "Process and modify Google One trial tokens directly on allowed pages",
  "permissions": [
    "storage",
    "clipboardWrite",
    "scripting",
    "webRequest",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://one.google.com/*",
    "https://tokenized.play.google.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    },
    "default_title": "Google One Toolkit"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["https://one.google.com/*"],
      "js": ["js/content.js"],
      "css": ["css/style.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [ "css/style.css" ],
      "matches": [ "https://one.google.com/*" ]
    }
  ]
}

